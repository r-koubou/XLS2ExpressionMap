BoxLayout:
    canvas.before:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        padding: 0,40
        orientation: "vertical"
        Image:
            source: "resources/dropicon.png"
            allow_stretch: False
        Label:
            font_size: 24
            color: 0.5, 0.5, 0.5, 1
            size_hint_y: 0.3
            text: "Drop your xlsx file here"
        Label:
            id: message_label
            font_size: 20
            color: 0.5, 0.5, 0.5, 1
            size_hint_y: 0.2
            text: ""
        Label:
            id: progress_label
            font_size: 24
            color: 0.5, 0.5, 0.5, 1
            size_hint_y: 0.2
            text: ""

